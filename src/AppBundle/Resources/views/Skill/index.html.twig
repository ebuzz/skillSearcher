{% extends '::base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('js/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('js/datatables-responsive/css/dataTables.responsive.css') }}" rel="stylesheet">
{% endblock %}
{% block body -%}
<div id="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Skills</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading"></div>
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables" role="grid">
                                        <thead>
                                            <tr>
                                                <th>Nombre</th>
                                                <th style="background:none; cursor:default; width:64px"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for skill in skills %}
                                                <tr>
                                                    <td>
                                                        <span class="spanName" id="spanName-{{ skill.skillId }}" data-idposition="{{ skill.skillId }}" >
                                                            {{ skill.name }}
                                                        </span>
                                                        <input type="text" class="inputName" id="inputName-{{ skill.skillId }}" data-idposition ="{{ skill.skillId }}" value="{{skill.name}}" name="name" style="display:none" />
                                                    </td>
                                                    <td style="text-align:center">
                                                        <a class="edit" data-idposition="{{ skill.skillId }}" href="#"><i class="glyphicon glyphicon-edit"></i></a>
                                                        <a href="{{ path('skill_delete', { 'id': skill.skillId }) }}"><i class="glyphicon glyphicon-trash"></i></a>
                                                    </td>
                                                </tr>
                                            {% endfor %}   
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 createSection">
            <div class="col-lg-offset-2 col-lg-8">
                <h2>Crear Skill</h2>
            </div>
            <div class="col-lg-offset-2 col-lg-8">
                Nombre de la skill:
                <input type="text" name="name" class="form-control skillName"/>
                <p class="createInfo">*Presiona ENTER para guardar</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/datatables/media/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('js/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/user/userList.js') }}"></script>
    <script src="{{ asset('js/skill/editSkill.js') }}"></script>
{% endblock %}
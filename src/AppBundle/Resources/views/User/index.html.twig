{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User list</h1>

    <table class="">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Admissiondate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }} {{ entity.lastName }} {{ entity.surName }}</td>
                <td>{{ entity.username }}</td>
                <td>{% if entity.admissionDate %}{{ entity.admissionDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('user_show', { 'id': entity.userId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('user_edit', { 'id': entity.userId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('user_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

{% extends '::base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('js/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('js/datatables-responsive/css/dataTables.responsive.css') }}" rel="stylesheet">
{% endblock %}
{% block body -%}
<div id="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Usuarios</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading"> Usuarios </div>
                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables" role="grid">
                                            <thead>
                                                <tr>
                                                <th>Imagen</th>
                                                <th>Nombre</th>
                                                <th>Correo</th>
                                                <th>Fecha de admisi√≥n</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for entity in entities %}
                                                <tr>
                                                    <td>{{ entity.image }}</td>
                                                    <td>{{ entity.name }} {{ entity.lastName }} {{ entity.surName }}</td>
                                                    <td>{{ entity.username }}</td>
                                                    <td>{% if entity.admissionDate %}{{ entity.admissionDate|date('Y-m-d') }}{% endif %}</td>
                                                    <td>
                                                        <ul>
                                                            <li>
                                                                <a href="{{ path('user_show', { 'id': entity.userId }) }}">mostrar</a>
                                                            </li>
                                                            <li>
                                                                <a href="{{ path('user_edit', { 'id': entity.userId }) }}">editar</a>
                                                            </li>
                                                            <li>
                                                                <a href="{{ path('user_delete', { 'id': entity.userId }) }}">eliminar</a>
                                                            </li>
                                                        </ul>
                                                    </td>
                                                </tr>
                                            {% endfor %}   
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/datatables/media/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('js/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/user/userList.js') }}"></script>
{% endblock %}
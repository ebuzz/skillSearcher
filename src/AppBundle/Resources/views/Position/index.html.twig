{% extends '::base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('js/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('js/datatables-responsive/css/dataTables.responsive.css') }}" rel="stylesheet">
{% endblock %}
{% block body -%}
<div id="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Posiciones</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading"> </div>
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables" role="grid">
                                        <thead>
                                            <tr>
                                                <th>Nombre</th>
                                                <th style="background:none; cursor:default; width:64px "></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for position in positions %}
                                                <tr>
                                                    <td>
                                                        <span class="spanName" id="spanName-{{ position.positionId }}" data-idposition="{{ position.positionId }}" >
                                                            {{ position.name }}
                                                        </span> 
                                                        <input type="text" class="inputName" id="inputName-{{ position.positionId }}" data-idposition ="{{ position.positionId }}" value="{{position.name}}" name="name" style="display:none" />
                                                    </td>
                                                    <td style="text-align:center">
                                                        <a class="editPosition" data-idposition="{{ position.positionId }}" href="#"><i class="glyphicon glyphicon-edit"></i></a>
                                                        <a href="{{ path('position_delete', { 'id': position.positionId }) }}"><i class="glyphicon glyphicon-trash"></i></a>
                                                    </td>
                                                </tr>
                                            {% endfor %}   
                                        </tbody>
                                    </table>
                                    <span>
                                        <a href="{{ path('position_new') }}">
                                            <i class="glyphicon glyphicon-plus-sign"></i> Crear posici√≥n
                                        </a>    
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/datatables/media/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('js/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/user/userList.js') }}"></script>
    <script src="{{ asset('js/position/editposition.js') }}"></script>
{% endblock %}
{% extends '::base.html.twig' %}

{% block body -%}
<div class="container-fluid">
    <div class="row">
       <div class="col-lg-12">
            <h1 class="page-header">Crear Cuenta</h1>
        </div>
    </div>
    <form method="POST" action="{{ path('account_create')}}"> 
        <div class="col-lg-4">
            <div class="well">
                <div class="row">
                    <div class="col-lg-12">
                        <label>Nombre de cuenta </label>
                        <input type="text" name="name" class="form-control"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <label>Descripcion de la tecnologia </label>
                        <input type="text" name="technologyDescription" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                    <label>Lider de cuenta </label>
                        <select type="text" name="leaderName" class="form-control">
                            <option selected disabled>Seleccione el lider</option>
                            {% for user in users %}
                                <option value="{{ user.name }} {{ user.lastName }} {{ user.surName }}">{{ user.name }} {{ user.lastName }} {{ user.surName }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                </br>
                <div class="row">
                    <span>
                        <a href="{{ path('account') }}">
                            <i class="fa fa-arrow-left"></i> Regresar
                        </a>    
                    </span>
                    <div class="pull-right">
                        <input type="submit" class="btn btn-sm btn-success" value="Guardar" href="{{ path('account') }}" />
                    </div>
                </div>
            </div>
        </div>
    </form> 
</div>  
{% endblock %}





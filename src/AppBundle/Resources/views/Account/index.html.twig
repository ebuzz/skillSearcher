{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Account list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>TechnologyDescription</th>
                <th>LeaderName</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('account_show', { 'id': entity.accountId }) }}">{{ entity.accountId }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.technologyDescription }}</td>
                <td>{{ entity.leaderName }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('account_show', { 'id': entity.accountId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('account_edit', { 'id': entity.accountId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('account_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

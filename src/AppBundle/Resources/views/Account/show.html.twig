{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Account</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.accountId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>TechnologyDescription</th>
                <td>{{ entity.technologyDescription }}</td>
            </tr>
            <tr>
                <th>LeaderName</th>
                <td>{{ entity.leaderName }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('account') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('account_edit', { 'id': entity.accountId }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}

{% extends '::base.html.twig' %}

{% block body -%}
<div id="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ team.name }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading"></div>
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables" role="grid">
                                        <thead>
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Skill</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for user in users %}
                                                <tr>
                                                    <td>{{ user.name }} {{ user.lastName }} {{ user.surName }} </a></td>
                                                    <td>
                                                        {% for skill in userSkill %}
                                                            {% if user.userTeamId == skill.userTeamId%}
                                                                <li>{{ skill.name }}</li>
                                                            {% endif %}
                                                        {% endfor %}
                                                    </td>
                                                    <td style="text-align:center">
                                                        <a href="{{ path('team_deleteMember', { 'id': user.teamId, 'idMember': user.userTeamId } ) }}"><i class="glyphicon glyphicon-trash"></i></a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                    <span>
                                        <a href="{{ path('team') }}">
                                            <i class="fa fa-arrow-left"></i> Regresar
                                        </a>    
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</div>  
{% endblock %}

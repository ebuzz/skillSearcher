{% extends '::base.html.twig' %}

{% block body -%}
<div class="container-fluid">
    <div class="row">
       <div class="col-lg-12">
            <h1 class="page-header">Editar Equipos</h1>
        </div>
    </div>
    <form method="POST" action="{{ path('team_update', {'id': team.teamId}) }}"> 
        <div class="col-lg-4">
            <div class="well">
                <div class="row">
                    <div class="col-lg-12">
                        <label>Nombre de equipo </label>
                        <input type="text" value="{{team.name}}" name="name" class="form-control"/>
                    </div>
                </div>
                </br>
                <div class="row">
                    <span>
                        <a href="{{ path('team') }}">
                            <i class="fa fa-arrow-left"></i> Regresar
                        </a>    
                    </span>
	                <div class="pull-right">
	                    <input type="submit" class="btn btn-sm btn-success" value="Guardar" href="{{ path('team') }}" />
	                </div>
                </div>
            </div>
        </div>
    </form> 
</div>  
{% endblock %}





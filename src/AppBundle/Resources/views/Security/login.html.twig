{% extends '::base_login.html.twig' %}
{% block body %}
    <div class="form">

        {% if exist is defined %}
            <div class="alert alert-danger">
                Correo no valido.
            </div>
        {% elseif error %}
            <div class="alert alert-danger">
                Usuario o contraseña incorrectos
            </div>
        {% endif %}
        {% if success %}
            <div class="alert alert-success">
                {{ success }}
            </div>
        {% endif %}
        <ul class="tab-group">
            <li class="tab active"><a href="#login">Iniciar Sesión</a></li>
            <li class="tab"><a href="#signup">Regístrate</a></li>
        </ul>
        <div class="tab-content">
            <div id="login">
                <form role="form" action="{{ path('login_check') }}" method="post">
                    <div class="field-wrap">
                        <label>Email<span class="req">*</span></label>
                        <input type="email" id="username" name="_username" required/>
                    </div>
                    <div class="field-wrap">
                        <label>Contraseña<span class="req">*</span></label>
                        <input type="password" id="password" name="_password" class="password" required/>
                        <i class="form-control-feedback glyphicon glyphicon-eye-open loginpass" data-clicks="true"
                           title="Ver contraseña"></i>
                    </div>
                    <div class="options">
                        <p class="remember_me">
                            <input type="checkbox" id="remember_me" name="_remember_me" checked/> No cerrar sesión
                        </p>

                        <p class="forgot"><a type="button" href="{{ path('retrieve_password') }}">Recuperar
                                contraseña</a></p>
                    </div>
                    <button class="button button-block"/>
                    Iniciar Sesión</button>
                </form>
            </div>
            <div id="signup">
                <form method='post' action="{{ path('registered') }}" accept-charset='UTF-8'
                      enctype="multipart/form-data">
                    <div class="top-row">
                        <div class="field-wrap">
                            <label>Nombre<span class="req">*</span></label>
                            <input type="text" name="name" type="text" required/>
                        </div>
                        <div class="field-wrap">
                            <label>Apellido Paterno<span class="req">*</span></label>
                            <input type="text" name="lastName" required required/>
                        </div>
                    </div>
                    <div class="field-wrap">
                        <label>Email<span class="req">*</span></label>
                        <input type="email" id="verifyMail" name="email" required/>
                        <span class="form-control-feedback reg glyphicon " id="mailIcon"></span>
                    </div>
                    <div class="field-wrap">
                        <label>Contraseña<span class="req">*</span></label>
                        <input type="password" name="password" class="password" required/>
                        <input type="hidden" id="exist" name="exist" value=""/>
                        <i class="form-control-feedback glyphicon glyphicon-eye-open singuppass" data-clicks="true"
                           title="Ver contraseña"></i>
                    </div>
                    <button type="submit" class="button button-block"/>
                    Regístrate</button>
                </form>
            </div>
        </div>
        <!-- tab-content -->
    </div> <!-- /form -->

{% endblock %}